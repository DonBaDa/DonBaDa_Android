<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.puze.donbada.CardActivity">

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/logo_layout"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logo"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="돈바다"
                android:textSize="33dp"
                android:fontFamily="@font/chungchunsidae_r"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="떼인 돈 받아드립니다"
                android:textSize="14dp"
                android:fontFamily="@font/nanumsquare_l"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:id="@+id/card"
        android:padding="16dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:background="@drawable/layout_card"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/cardarrow"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <android.support.v4.widget.Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/ic"
                android:layout_width="60dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:weightSum="19"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <EditText
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/account_one"
                    android:layout_margin="8dp"
                    android:background="@drawable/text_account"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="-"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/account_two"
                    android:layout_margin="8dp"
                    android:background="@drawable/text_account"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="-"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/account_three"
                    android:layout_margin="8dp"
                    android:background="@drawable/text_account"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="-"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/account_four"
                    android:layout_margin="8dp"
                    android:background="@drawable/text_account"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textSize="8dp"
                android:text="MONTH/YEAR"
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <EditText
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/month"
                    android:layout_margin="8dp"
                    android:background="@drawable/text_account"
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="/"
                    android:gravity="center"
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/year"
                    android:layout_margin="8dp"
                    android:background="@drawable/text_account"
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <TextView
            android:text="카드 비밀번호"
            android:textSize="11dp"
            android:textColor="#4c4c4c"
            android:fontFamily="@font/nanumsquare_l"
            android:layout_width="match_parent"
            android:layout_height="22dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <EditText
                android:id="@+id/password_one"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/text_password"
                android:layout_width="25dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/password_two"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/text_password"
                android:layout_width="25dp"
                android:layout_height="30dp" />
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="*"
                android:layout_width="25dp"
                android:layout_height="30dp" />
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="*"
                android:layout_width="25dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:id="@+id/button_regist"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/button_next"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:textAlignment="center"
            android:text="Regist >"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/nanumsquare_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
